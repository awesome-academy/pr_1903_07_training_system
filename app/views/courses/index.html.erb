<!-- Featured Projects-->
<section class="section section-lg bg-default text-center padding-top-15">
  <div class="container">
    <h2 class="wow fadeIn"><%= t(".all_course") %></h2>
    <% if has_role?(:admin) %>
      <%= link_to t(".new_course"), new_course_path,
        class: "btn btn-outline-primary float-right" %>
    <% end %>
    <div class="row row-30 row-md-50 row-xl-70">
      <% @courses.each do |course| %>
        <div class="col-sm-6 col-lg-4 wow fadeIn">
          <!-- Post Minimal-->
          <div class="post-minimal">
            <figure class="post-minimal-media">
              <%= link_to course.description.html_safe, course,
                class: "text-muted image-course" %>
            </figure>
            <h4 class="post-minimal-title"><a href="#"><%= link_to course.course_name, course %></a></h4>
            </p>
            <% if has_role?(:admin) %>
              <%= link_to t(".edit_course"), edit_course_path(course),
                class: "btn btn-outline-secondary" %>
              <%= link_to t(".delete_course"), course, method: :delete,
                data: { confirm: "Are you sure?" },
                class: "btn btn-outline-danger" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
